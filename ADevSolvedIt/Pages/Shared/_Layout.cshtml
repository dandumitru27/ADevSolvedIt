<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:site_name" content="A Dev Solved It" />

    <title>@(ViewData["Title"] ?? "A Dev Solved It")</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Piazzolla:wght@300;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    @await RenderSectionAsync("BodyStart", required: false)
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="col-12 col-lg-8 d-flex justify-content-between pe-1">
                    <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/logo.png"></a>

                    <partial name="_LoginPartial" />
                </div>
                <div class="col-12 col-lg-4 ps-3 div-add-post" style="margin-left: 4px;">
                    <a href="/posts/add" class="btn btn-success btn-action">Write a Post</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container mt-3 mb-4">
            <a asp-page="/about">About</a> |
            <a asp-page="/privacy">Privacy Policy</a> |
            Contact & updates: <a href="https://www.facebook.com/ADevSolvedIt">Facebook page</a>
            <div class="mt-3">
                User contributed content licensed under a permissive Creative Commons license, <a href="https://creativecommons.org/licenses/by-sa/4.0/" style="text-decoration:underline">CC BY-SA</a>, with attribution required
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="/lib/highlight.js/styles/github.min.css">
    <script src="/lib/highlight.js/highlight.min.js"></script>

    <script src="/lib/markdown-it/markdown-it.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
