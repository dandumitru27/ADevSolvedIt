@page
@model ADevSolvedIt.Areas.Admin.Pages.IndexModel

<div style="margin-bottom: 10px">
    <div style="float: right; padding-top: 10px">
        <a href="/admin/comments">Comments</a> |
        <a href="/admin/users">Users</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Last Edit Date</th>
            <th>Thanks</th>
            <th>Views</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.LastEditDate.ToString("MMM d, yyyy HH:mm")</td>
                <td>@post.ThanksCount</td>
                <td>@post.Views</td>
                <td><a href="/admin/post-delete/@post.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>