@page "{id}"

@model ADevSolvedIt.Areas.Admin.Pages.CommentEditModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="mb-3">
                <textarea id="commentTextMarkdown" asp-for="Comment.TextMarkdown" required rows="6" class="form-control"></textarea>
                <div class="preview-title">
                    preview
                </div>
                <div id="commentTextPreview" class="preview">
                </div>
            </div>
            <div class="mb-3">
                <input asp-for="Comment.Name" required class="form-control form-input-250" placeholder="Name">
            </div>
            <div class="mb-3">
                <input asp-for="Comment.Email" class="form-control form-input-250" placeholder="Email" aria-describedby="emailInfo">
            </div>

            <button type="submit" class="btn btn-success">Submit</button>
        </div>
        <div class="col-lg-4 d-none d-sm-block">
            <h4>Formatting Tips</h4>

            <p>This editor uses <a href="https://commonmark.org/help/" target="_blank">Markdown</a> to easily add code in your posts.</p>

            <p>Triple backticks for full line(s) of code (or indent 4 spaces)</p>
<pre><code>```
let foo = 'bar';
```
</code></pre>

            <p>[link text](http://a.com)</p>

            <p>*<em>italic</em>* **<strong>bold</strong>**</p>

            <a href="https://commonmark.org/help/" target="_blank">More Tips</a>
        </div>
    </div>
</form>

<div class="mt-3 mb-5">
    <a href="/admin/comments">Back</a>
</div>

@section Scripts {
    <script>hljs.initHighlightingOnLoad();</script>
    <script src="~/js/commentEdit.js" asp-append-version="true"></script>
}