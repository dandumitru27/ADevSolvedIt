@page "{id}"
@model ADevSolvedIt.Areas.Admin.Pages.CommentDeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Are you sure you want to delete this comment?</h1>

<div class="post-delete-details">
    <div>
        Id: @Model.Comment.Id
    </div>
    <div>
        TextMarkdown: @Model.Comment.TextMarkdown
    </div>
</div>

<form method="post">
    <button type="submit" class="btn btn-primary">Delete</button>
</form>