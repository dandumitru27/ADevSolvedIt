@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row mt-4">
    <section>
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                            article
                            about setting up this ASP.NET application to support logging in via external services
                        </a>.
                    </p>
                </div>
            }
            else
            {
                if (Model.ReturnUrl == "/posts/add")
                {
                    <div class="mb-4 fs-5">You need to log in or sign up to write a new post, but this takes just a few seconds with Google or GitHub.</div>
                }

                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                var providerLower = provider.Name.ToLower();

                                <button type="submit" class="btn btn-primary provider @providerLower-btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    <i class="fs-5 me-2 bi-@providerLower"></i> Log in with @provider.DisplayName
                                </button>
                            }
                        </p>
                    </div>
                </form>
            }
        }
    </section>
</div>

<div class="mt-2 fs-5">
    Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
